<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:black">
            <div class="container-fluid">
                <div></div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:darkgoldenrod">ECommerceApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:darkgoldenrod">
                                Category
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color:darkgray"> 
                                <a class="dropdown-item" asp-controller="Categories" asp-action="Index">Electronics</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Clothings</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Books</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Home appliances</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Beaverages</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Cosmetics</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Computer</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Phones and accessories</a>
                                <a class="dropdown-item" asp-controller="ControllerName" asp-action="ActionName">Games and sports</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About" style="color:darkgoldenrod">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Help" style="color:darkgoldenrod">Help</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact" style="color:darkgoldenrod">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Settings" style="color:darkgoldenrod">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SavedItems" asp-action="Index" style="color:darkgoldenrod">Saved-items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Items" asp-action="Create" style="color:darkgoldenrod">Add-item</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:darkgoldenrod">
            &copy; 2023 - ECommerceApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:gold">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
