@model ECommerceApplication.Models.Item

<div>
    <h4>Create Item</h4>
    <button style="margin-left:30cm; margin-top: -2cm"><a asp-controller="Categories" asp-action="Create" style="text-decoration:none; color:white">Create Category</a></button>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <img id="ItemImagePreview" class="border-info rounded" style="max-width: 150px" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Book Category</label>
                <select class="form-select form-control" asp-for="Category" asp-items="@((SelectList)ViewBag.CatList)">
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WasPrice" class="control-label"></label>
                <input asp-for="WasPrice" class="form-control" />
                <span asp-validation-for="WasPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            var output = document.getElementById('ItemImagePreview');
            output.src = $("#Image").val();
        })

        $("#Image").on("change", function () {
            var output = document.getElementById('ItemImagePreview');
            output.src = $(this).val();
        })
    </script>
}

